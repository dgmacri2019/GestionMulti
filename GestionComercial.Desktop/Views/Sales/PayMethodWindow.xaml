<Window x:Class="GestionComercial.Desktop.Views.Sales.PayMethodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionComercial.Desktop.Views.Sales"
        mc:Ignorable="d"
        Title="Metodo de Pago" 
        WindowStartupLocation="CenterScreen"
        Height="300" 
        Width="450"
        x:Name="PayMethodWin" 
        Loaded="PayMethodWin_Loaded"
        KeyDown="PayMethodWin_KeyDown">
    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgMetodosPago"
          AutoGenerateColumns="False"
          ItemsSource="{Binding MetodosPago}"
          CanUserAddRows="True"
          Margin="0,0,0,10"
          CellEditEnding="dgMetodosPago_CellEditEnding">
            <DataGrid.Columns>
                <!-- Columna editable: usuario escribe el código (EF, MP, etc.) -->
                <DataGridTextColumn Header="Método"
                            Binding="{Binding MetodoCodigo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            Width="100"/>

                <!-- Solo lectura: descripción completa -->
                <DataGridTextColumn Header="Descripción"
                            Binding="{Binding MetodoDescripcion}"
                            Width="200"
                            IsReadOnly="True"/>

                <!-- Monto con formato moneda -->
                <DataGridTextColumn Header="Monto" 
                        Binding="{Binding Monto, StringFormat={}{0:C2},UpdateSourceTrigger=LostFocus, Mode=TwoWay}" 
                        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <EventSetter Event="GotFocus" Handler="Monto_GotFocus"/>
                            <EventSetter Event="PreviewKeyDown" Handler="Monto_PreviewKeyDown"/>
                            <EventSetter Event="PreviewTextInput" Handler="Monto_PreviewTextInput"/>
                            <EventSetter Event="TextChanged" Handler="Monto_TextChanged"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Aceptar"
                    Width="100" 
                    Margin="5" 
                    Click="Aceptar_Click"
                    Style="{StaticResource BtnAdd}"/>
            <Button Content="Cancelar" 
                    Width="100" 
                    Margin="5"
                    Click="Cancelar_Click"
                    Style="{StaticResource BtnCancel}"/>
        </StackPanel>
    </Grid>
</Window>
