<Window x:Class="GestionComercial.Desktop.Views.Searchs.ArticleSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar artículo" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Caja de búsqueda -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Buscar: " VerticalAlignment="Center"/>
            <TextBox x:Name="txtSearch" Width="300" Margin="5 0 0 0"
                     KeyUp="txtSearch_KeyUp"/>
        </StackPanel>

        <!-- Grilla de artículos -->
        <DataGrid x:Name="dgArticles" Grid.Row="1" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  MouseDoubleClick="dgArticles_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*"/>
                <!--<DataGridTextColumn Header="Precio" Binding="{Binding Price}" Width="100" 
                                    ElementStyle="{StaticResource RightAlignStyle}"/>-->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Aceptar" Width="80" Margin="0 0 5 0" Click="BtnOk_Click"/>
            <Button Content="Cancelar" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
