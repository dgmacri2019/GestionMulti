<Window x:Class="GestionComercial.Desktop.Views.Masters.CommerceDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionComercial.Desktop.Views.Masters"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Datos de la empresa" 
        MinHeight="400"
        MinWidth="900"
        Width="900"
        Height="400"        
        WindowStartupLocation="CenterScreen" 
        SizeChanged="Window_SizeChanged" 
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        Background="LightGray" >
    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>


    <Grid x:Name="GridGeneral" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10" 
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

       
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Razón Social" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtBusinessName"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding BusinessName}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Nombre de Fantasía"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtFantasyName"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding FantasyName}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
            <TextBlock Text="CUIT"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <xctk:MaskedTextBox x:Name="txtCUIT"
                                Mask="00-00000000-0"
                                PromptChar="_" 
                                Style="{StaticResource TextBoxSearch}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Text="{Binding CUIT}"
                                TextChanged="txtCUIT_TextChanged"
                                GotFocus="TextBox_SelectAll"
                                PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                                KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="3" Margin="0,0,0,5">
            <TextBlock Text="Inicio de Actividades" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <DatePicker x:Name="dpDate" 
                        Grid.Column="1" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        SelectedDate="{Binding ActivityStartDate}"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Domicilio" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtAddress"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Address}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Código Postal" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPostalCode"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding PostalCode}"
                     MaxLength="8"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="2" Margin="0,0,0,8">
            <TextBlock Text="Localidad" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCity"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding City}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="3" Margin="0,0,0,8">
            <TextBlock Text="Provincia" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbStates" 
                      Style="{StaticResource ComboBox}"
                      Width="Auto"
                      ItemsSource="{Binding States}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding StateId}"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Ingresos Brutos" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtIIBB"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding IIBB}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Condición Fiscal" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbIvaConditions" 
                      Style="{StaticResource ComboBox}"
                      Width="Auto"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      ItemsSource="{Binding IvaConditions}"
                      SelectedValue="{Binding IvaConditionId}"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="2" Margin="0,0,0,8">
            <TextBlock Text="CBU Bancario" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCBU"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding CBU}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="3" Margin="0,0,0,8">
            <TextBlock Text="Alias Bancario" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtAlias"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Alias}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>



        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Teléfono / Fax" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPhone"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"                     
                     Text="{Binding Phone}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Teléfono / Fax" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPhone2"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Phone2}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="2" Margin="0,0,0,8">
            <TextBlock Text="Teléfono / Fax" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPhone3"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Phone3}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Correo Electrónico" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtEmail"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Email}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Sitio Web" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtWebSite"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding WebSite}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Email de Registro" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtRegisterEmail"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     IsReadOnly="True"
                     Text="{Binding RegisterEmail}"
                     GotFocus="TextBox_SelectAll"                     
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Codigo de Activación"  
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtActivationCode"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ActivationCode}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>



        <!-- Botones -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="4" Margin="0,5,0,0">
            <Button x:Name="btnAdd"
                    Content="Aceptar (F2)"
                    Width="100" 
                    Margin="5" 
                    Click="Aceptar_Click"                    
                    Style="{StaticResource BtnAdd}"/>
            <Button Content="Cancelar (ESC)" 
                    Width="100" 
                    Margin="5" 
                    Click="Cancelar_Click"
                    Style="{StaticResource BtnCancel}"/>
        </StackPanel>


        <!-- Label error -->
        <TextBlock x:Name="lblError"
                   Grid.Row="6" 
                   Grid.ColumnSpan="4"
                   HorizontalAlignment="Stretch"
                   Style="{StaticResource lblError12}"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
