<Window x:Class="GestionComercial.Desktop.Views.Auxiliaries.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionComercial.Desktop.Views.Auxiliaries"
        Title="Seleccionar Color" 
        Height="300" 
        Width="350"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">
        <TextBlock Text="Selector de Color (RGB)" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Sliders -->
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="R:" Width="20"/>
            <Slider x:Name="sliderR" Minimum="0" Maximum="255" Width="200" ValueChanged="ColorSlider_ValueChanged"/>
            <TextBlock x:Name="lblR" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="G:" Width="20"/>
            <Slider x:Name="sliderG" Minimum="0" Maximum="255" Width="200" ValueChanged="ColorSlider_ValueChanged"/>
            <TextBlock x:Name="lblG" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="B:" Width="20"/>
            <Slider x:Name="sliderB" Minimum="0" Maximum="255" Width="200" ValueChanged="ColorSlider_ValueChanged"/>
            <TextBlock x:Name="lblB" Width="40"/>
        </StackPanel>

        <!-- Preview -->
        <Border x:Name="previewColor" Height="60" Margin="0,15" BorderBrush="Black" BorderThickness="1"/>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Aceptar" 
                    Width="80" 
                    Margin="5" 
                    Style="{StaticResource BtnUpdate}"
                    Click="Aceptar_Click"/>
            <Button Content="Cancelar" 
                    Width="80" 
                    Margin="5"
                    Style="{StaticResource BtnCancel}"
                    Click="Cancelar_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
