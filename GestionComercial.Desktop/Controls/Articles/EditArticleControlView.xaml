<UserControl x:Class="GestionComercial.Desktop.Controls.Articles.EditArticleControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Articles"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1460"
             x:Name="miUserControl" 
             Loaded="miUserControl_Loaded"
             Background="LightGray">

    <Grid x:Name="GridGeneral" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" 
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <!--<ColumnDefinition Width="*"/>-->
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Código" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCode"
                     Style="{StaticResource TextBoxSearch}"
                     Width="150"
                     VerticalAlignment="Center"
                     MaxLength="8"
                     Text="{Binding Code}"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Código de barras" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtBarCode"
                     Style="{StaticResource TextBoxSearch}"
                     Width="150"
                     VerticalAlignment="Center"                     
                     Text="{Binding BarCode}"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Descripción" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtDescription"
                     Style="{StaticResource TextBoxSearch}"
                     Width="300"
                     VerticalAlignment="Center"                     
                     Text="{Binding Description}"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="IVA" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbTaxes" 
                      Style="{StaticResource ComboBox}"
                      Width="auto"
                      ItemsSource="{Binding Taxes}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding TaxId, UpdateSourceTrigger=PropertyChanged}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Unidad de medida" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbMeasures" 
                      Style="{StaticResource ComboBox}"
                      Width="auto"
                      ItemsSource="{Binding Measures}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding MeasureId}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Categoría" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbCategories" 
                      Style="{StaticResource ComboBox}"
                      Width="auto"
                      ItemsSource="{Binding Categories}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding CategoryId}"
                      ItemContainerStyle="{StaticResource CBContainer }"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Costo sin IVA" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCost"
                     Style="{StaticResource TextBoxSearch}"
                     Width="100"
                     VerticalAlignment="Center"
                     Text="{Binding Cost, UpdateSourceTrigger=LostFocus, Converter={StaticResource DecimalCommaConverter}}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>                 
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Bonificación" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtBonification"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding Bonification, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>                
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Costo con bonifcación" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtRealCost"
                     Style="{StaticResource TextBoxSearch}"
                     Width="100"
                     VerticalAlignment="Center" 
                     IsReadOnly="True"
                     Text="{Binding RealCost, UpdateSourceTrigger=LostFocus, Converter={StaticResource DecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>                
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Costo con IVA" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPriceWithTax"
                     Style="{StaticResource TextBoxSearch}"
                     Width="100"
                     VerticalAlignment="Center" 
                     Text="{Binding PriceWithTax, UpdateSourceTrigger=LostFocus, Converter={StaticResource DecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Impuestos internos %" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtInternalTax"
                     Style="{StaticResource TextBoxSearch}"
                     Width="50"
                     MaxLength="3"
                     VerticalAlignment="Center"                     
                     Text="{Binding InternalTax, StringFormat={}{0:N0}}" 
                     PreviewTextInput="txtInternalTax_PreviewTextInput"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Puntos por compra" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtSalePoint"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding SalePoint}" 
                     PreviewTextInput="txtSalePoint_PreviewTextInput"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Puntos por canje" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtChangePoint"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding ChangePoint}" 
                     PreviewTextInput="txtChangePoint_PreviewTextInput"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Stock" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtStock"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding Stock, StringFormat={}{0:N4}}" 
                     LostFocus="txtStock_LostFocus" 
                     ToolTip="Este valor indica el stock actual del artículo"
                     PreviewTextInput="txtStock_PreviewTextInput"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Stock mínimo" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtMinimalStock"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding MinimalStock, StringFormat={}{0:N4}}" 
                     LostFocus="txtMinimalStock_LostFocus" 
                     ToolTip="El valor indicado aquí, generará el arlerta de reposición"
                     PreviewTextInput="txtMinimalStock_PreviewTextInput"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Reposición" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtReplacement"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding Replacement, StringFormat={}{0:N4}}" 
                     LostFocus="txtReplacement_LostFocus" 
                     PreviewTextInput="txtReplacement_PreviewTextInput"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     ToolTip="Las notas de pedido a proveedores automáticas se cargarán con la cantidad indicada aquí"/>
        </StackPanel>

        <!--<StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Umbral" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtUmbral"
                     Style="{StaticResource TextBoxSearch}"
                     Width="80"
                     VerticalAlignment="Center"                     
                     Text="{Binding Umbral, StringFormat={}{0:N4}}" 
                     LostFocus="txtUmbral_LostFocus" 
                     ToolTip="Las notas de pedido a proveedores automáticas se cargarán cuando el valor sea igual o inferior al indicado aquí"
                     PreviewTextInput="txtUmbral_PreviewTextInput"/>
        </StackPanel>-->


        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Verifica stock" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbStockCheck"
                      Style="{StaticResource CheckBox }"
                      Width="50"
                      VerticalAlignment="Center"                     
                      IsChecked="{Binding StockCheck}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Es Pesable" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbIsWeight"
                      Style="{StaticResource CheckBox}"
                      Width="50"
                      VerticalAlignment="Center"                     
                      IsChecked="{Binding IsWeight}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Habilitado" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbIsEnabled"
                      Style="{StaticResource CheckBox}"
                      Width="50"
                      VerticalAlignment="Center"                     
                      IsChecked="{Binding IsEnabled}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" 
                    Margin="10,0,20,0">
            <TextBlock Text="Observaciones" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtRemark"
                     Style="{StaticResource TextBoxSearch}"
                     Width="650"
                     Height="60"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"                        
                     Text="{Binding Remark}"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" 
                    Margin="10,10,20,0">
            <TextBlock Text="Aclaraciones" VerticalAlignment="Center" 
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtClarifications"
                     Style="{StaticResource TextBoxSearch}"
                     Width="650"
                     Height="60"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"   
                     Text="{Binding Clarifications}"/>
        </StackPanel>

        <Button 
            x:Name="btnCancel"
            Grid.Row="9" 
            Grid.Column="1" 
            Content="Cancelar"  
            Margin="0,40,120,0" 
            Click="BtnCancel_Click" 
            Style="{StaticResource BtnCancel}"/>
        <Button 
            x:Name="btnUpdate"
            Grid.Row="9" 
            Grid.Column="1" 
            Content="Actualizar" 
            Margin="120,40,0,0"  
            Click="BtnUpdate_Click"
            Style="{StaticResource BtnUpdate}"/>
        <Button 
            x:Name="btnAdd"
            Grid.Row="9" 
            Grid.Column="1" 
            Content="Guardar" 
            Margin="120,40,0,0"  
            Click="BtnAdd_Click"
            Style="{StaticResource BtnAdd}"/>

        <TextBlock 
            x:Name="lblError"
            Grid.Row="10" 
            Grid.ColumnSpan="3"
            Style="{StaticResource lblError12}"
            TextWrapping="Wrap"
            />
    </Grid>


</UserControl>
