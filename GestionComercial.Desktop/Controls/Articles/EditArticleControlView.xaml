<UserControl x:Class="GestionComercial.Desktop.Controls.Articles.EditArticleControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Articles"
             mc:Ignorable="d" 
             x:Name="miUserControl" 
             Loaded="miUserControl_Loaded"
             Background="LightGray">

    <Grid x:Name="GridGeneral" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10" 
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Código" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCode"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     MaxLength="8"
                     Text="{Binding Code}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Código de barras" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtBarCode"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"  
                     HorizontalAlignment="Stretch"
                     Text="{Binding BarCode}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Descripción" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtDescription"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"   
                     HorizontalAlignment="Stretch"
                     Text="{Binding Description}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="IVA" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbTaxes" 
                      Style="{StaticResource ComboBox}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding Taxes}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding TaxId, UpdateSourceTrigger=PropertyChanged}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Unidad de medida" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbMeasures" 
                      Style="{StaticResource ComboBox}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding Measures}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding MeasureId}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Rubro" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbCategories" 
                      Style="{StaticResource ComboBox}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding Categories}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding CategoryId}"
                      ItemContainerStyle="{StaticResource CBContainer }"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Costo sin impuestos" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCost"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"                     
                     Text="{Binding Cost, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Bonificación %" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtBonification"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding Bonification, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Impuestos internos %" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtInternalTax"
                     Style="{StaticResource TextBoxSearch}"
                     MaxLength="3"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding InternalTax, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     PreviewTextInput="TextBoxIsNumeric_PreviewTextInput"/>
        </StackPanel>


         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Costo con bonifcación" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtRealCost"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     IsReadOnly="True"
                     Text="{Binding RealCost, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Costo con impuestos" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtCostWithTaxes"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding CostWithTaxes, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>
        
         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Utilidad"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtUtility"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding Utility, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        
         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Precio de venta sin IVA" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtSalePrice"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding SalePrice, UpdateSourceTrigger=LostFocus, Converter={StaticResource TwoDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Precio de venta con IVA"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtSalePriceWithTaxes"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding SalePriceWithTaxes, UpdateSourceTrigger=LostFocus, Converter={StaticResource TwoDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="5" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Puntos por canje" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtChangePoint"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding ChangePoint}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     PreviewTextInput="TextBoxIsNumeric_PreviewTextInput"/>
        </StackPanel>
      
         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="5" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Puntos por compra"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtSalePoint"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding SalePoint}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     PreviewTextInput="TextBoxIsNumeric_PreviewTextInput"/>
        </StackPanel>



         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="6" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Stock"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtStock"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding Stock, StringFormat={}{0:N4}, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     ToolTip="Este valor indica el stock actual del artículo" />
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="6" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Stock mínimo" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtMinimalStock"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding MinimalStock, StringFormat={}{0:N4}, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     ToolTip="El valor indicado aquí, generará el arlerta de reposición" />
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="7" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Reposición" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtReplacement"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding Replacement, StringFormat={}{0:N4}, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     ToolTip="Las notas de pedido a proveedores automáticas se cargarán con la cantidad indicada aquí"/>
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="7" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Umbral" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtUmbral"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding Umbral, StringFormat={}{0:N4}, UpdateSourceTrigger=LostFocus, Converter={StaticResource ThreeDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"
                     ToolTip="Las notas de pedido a proveedores automáticas se cargarán cuando el valor sea igual o inferior al indicado aquí"/>
        </StackPanel>       
        
         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="8" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Verifica stock" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbStockCheck"
                      Style="{StaticResource CheckBox }"
                      VerticalAlignment="Center"                     
                      HorizontalAlignment="Center"
                      IsChecked="{Binding StockCheck}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="8" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Es Pesable" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbIsWeight"
                      Style="{StaticResource CheckBox}"
                      VerticalAlignment="Center"                     
                      HorizontalAlignment="Center"
                      IsChecked="{Binding IsWeight}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="8" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Habilitado" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbIsEnabled"
                      Style="{StaticResource CheckBox}"
                      VerticalAlignment="Center"                     
                      HorizontalAlignment="Center"
                      IsChecked="{Binding IsEnabled}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,0,20,0">
            <TextBlock Text="Observaciones" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtRemark"
                     Style="{StaticResource TextBoxSearch}"                     
                     Height="60"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"                        
                     Text="{Binding Remark}"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


         <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,20,0">
            <TextBlock Text="Aclaraciones" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtClarifications"
                     Style="{StaticResource TextBoxSearch}"
                     Height="60"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"   
                     Text="{Binding Clarifications}"/>
        </StackPanel>


        <Button x:Name="btnCancel"
                Grid.Row="11" 
                Grid.ColumnSpan="3"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Cancelar"  
                Margin="0,40,120,0" 
                Click="BtnCancel_Click" 
                Style="{StaticResource BtnCancel}"/>
        <Button x:Name="btnUpdate"
                Grid.Row="11" 
                Grid.ColumnSpan="3"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Actualizar" 
                Margin="120,40,0,0"  
                Click="BtnUpdate_Click"
                Style="{StaticResource BtnUpdate}"/>
        <Button x:Name="btnAdd"
                Grid.Row="11" 
                Grid.ColumnSpan="3"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Guardar" 
                Margin="120,40,0,0"  
                Click="BtnAdd_Click"
                Style="{StaticResource BtnAdd}"/>

        <TextBlock x:Name="lblError"
                   Grid.Row="12" 
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Stretch"
                   Style="{StaticResource lblError12}"
                   TextWrapping="Wrap"/>
    </Grid>


</UserControl>
