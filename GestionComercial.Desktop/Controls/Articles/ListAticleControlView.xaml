<UserControl x:Class="GestionComercial.Desktop.Controls.Articles.ListAticleControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Gray">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <!-- Fila 0: Texto y botones -->
            <RowDefinition Height="auto"/>
            <!-- Fila 1: barra de búsqueda -->
            <RowDefinition Height="auto"/>
            <!-- Fila 2: DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Fila 3: Add/Edit -->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="PanelHeader" Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="0" Margin="0,0,50,8">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Fila 0: Texto y botones -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 1: barra de búsqueda -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 2: DataGrid -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 3: Add/Edit -->
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label 
                    x:Name="lblHeader" 
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Content="Artículos" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource lblHeader}"
                    Foreground="#2B418A"/>

                <Button 
                    x:Name="btnAdd"
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Content="Nuevo Articulo"
                    Margin="0,5,0,0" 
                    Style="{StaticResource BtnArticles}" Click="btnAdd_Click"/>
               
                <Button 
                    x:Name="btnEnables"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Content="{Binding ToggleEnabledText}"
                    Command="{Binding ToggleEnabledCommand}"
                    Margin="40,5,0,0" 
                    Style="{StaticResource BtnEnables}" />
            </Grid>
        </StackPanel>

        <StackPanel x:Name="PanelSearch" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,50,8">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" Style="{StaticResource BlueBold18}"/>
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource TextBoxSearch}"
                     Width="250"
                     VerticalAlignment="Center"                     
                     ToolTip="Ingresa código, descripción, categoría o código de barra"
                     Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <DataGrid x:Name="DgArticles" Background="Gray"
          Grid.Row="2" 
          ItemsSource="{Binding Articles}" 
          AutoGenerateColumns="False"                  
          CanUserAddRows="False"
          CanUserSortColumns="True"
          ColumnHeaderStyle="{StaticResource CenterBoldHeaderStyle}"
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
          MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Categoría" Width="100" SortMemberPath="Category">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding CategoryColor}" Padding="10" CornerRadius="20">
                                <TextBlock Text="{Binding Category}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Código" Width="auto" SortMemberPath="Code">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Code}" 
                                   Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Código Barra" Width="auto" SortMemberPath="BarCode">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding BarCode}" 
                                   Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Descripción" Width="auto" MinWidth="200" SortMemberPath="Description">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Description}" 
                                   Style="{StaticResource LeftAlignedTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Stock" Width="auto" SortMemberPath="Stock">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="30">
                                <TextBlock Text="{Binding Stock, StringFormat={}{0:N2}}" 
                                   Style="{StaticResource CenteredTextStyle}"
                                   Foreground="{Binding Stock, Converter={StaticResource NegativoATextoConverter}}"/>
                                <Border.Background>
                                    <MultiBinding Converter="{StaticResource StockMultiConverter}">
                                        <Binding Path="Stock" />
                                        <Binding Path="MinimalStock" />
                                    </MultiBinding>
                                </Border.Background>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Costo" Width="auto" SortMemberPath="Cost">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Cost, StringFormat={}{0:C4}}" 
                                   Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Bonificación" Width="auto" SortMemberPath="Bonification">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="20"
                        Background="{Binding Bonification, Converter={StaticResource NegativoAFondoConverter}}">
                                <TextBlock 
                            Text="{Binding Bonification, StringFormat={}{0:P0}}" 
                            Style="{StaticResource CenteredTextStyle}"
                            Foreground="{Binding Bonification, Converter={StaticResource NegativoATextoConverter}}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="SubTotal" Width="auto" SortMemberPath="RealCost">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding RealCost, StringFormat={}{0:C4}}" 
                                   Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Impuestos" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding TaxesPrice}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Description}" FontWeight="Bold"/>
                                            <TextBlock Text=": "/>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:C2}}"/>
                                            <TextBlock Text="  "/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Costo Real" Width="auto" SortMemberPath="PriceWithTax">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding PriceWithTax, StringFormat={}{0:C2}}" 
                                   Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Listas de Precios" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding PriceLists}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Description}" FontWeight="Bold"/>
                                            <TextBlock Text=": "/>
                                            <TextBlock Text="{Binding FinalPrice, StringFormat={}{0:C2}}"/>
                                            <TextBlock Text="  "/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>


