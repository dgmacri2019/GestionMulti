<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Maestros.Security.Permissions.ListPermissionsControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Maestros.Security.Permissions"
             Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Panel de Permisos -->
            <ColumnDefinition Width="auto" />
            <!-- Panel de Usuarios -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <ScrollViewer Grid.Row="0" Grid.Column="1" Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Encabezados -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Módulo" FontWeight="Bold" Grid.Column="0"/>
                    <TextBlock Text="Lectura" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center"/>
                    <TextBlock Text="Agregar" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editar" FontWeight="Bold" Grid.Column="3" HorizontalAlignment="Center"/>
                    <TextBlock Text="Borrar" FontWeight="Bold" Grid.Column="4" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Filas de permisos -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding PermissionGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding ModuleName}" Grid.Column="0"/>
                                <CheckBox IsChecked="{Binding CanRead}" Grid.Column="1" HorizontalAlignment="Center"/>
                                <CheckBox IsChecked="{Binding CanAdd}" Grid.Column="2" HorizontalAlignment="Center"/>
                                <CheckBox IsChecked="{Binding CanEdit}" Grid.Column="3" HorizontalAlignment="Center"/>
                                <CheckBox IsChecked="{Binding CanDelete}" Grid.Column="4" HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Usuarios -->
        <DockPanel Grid.Row="0" Grid.Column="0" Background="#f5f5f5" Margin="10">
            <TextBlock Text="Usuarios"
                       FontWeight="Bold"
                       Margin="5"
                       HorizontalAlignment="Center" />
            <ListBox ItemsSource="{Binding Users}"
                     SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                     DisplayMemberPath="FullName"
                     MouseDoubleClick="ListBox_MouseDoubleClick"
                     Margin="5"/>
        </DockPanel>


        <Button x:Name="btnCancel"
                Grid.Row="1" 
                Grid.ColumnSpan="2"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Cancelar"  
                Margin="0,40,120,0" 
                Click="BtnCancel_Click" 
                Style="{StaticResource BtnCancel}"/>
        <Button x:Name="btnUpdate"
                Grid.Row="1" 
                Grid.ColumnSpan="2"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Actualizar" 
                Margin="120,40,0,0"  
                Click="BtnUpdate_Click"
                Style="{StaticResource BtnUpdate}"/>

        <TextBlock x:Name="lblError"
            Grid.Row="2" 
            Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch"
            Style="{StaticResource lblError12}"
            TextWrapping="Wrap"/>
    </Grid>
</UserControl>
