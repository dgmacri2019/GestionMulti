<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Maestros.Stock.EditPriceListControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Maestros.Stock"
             xmlns:local1="clr-namespace:GestionComercial.Desktop.Helpers"
             xmlns:client="clr-namespace:GestionComercial.Desktop.ViewModels.Client"
             mc:Ignorable="d" 
             x:Name="miUserControl" 
             Loaded="miUserControl_Loaded"
             Background="LightGray">

    <Grid x:Name="GridGeneral" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10" 
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Stretch" 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Margin="0,0,0,8">
            <TextBlock Text="Descripción" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtDescription"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Description}"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Stretch" 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    Margin="10,0,20,8">
            <TextBlock Text="Utilidad" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtUtility"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"        
                     Text="{Binding Utility, UpdateSourceTrigger=LostFocus, Converter={StaticResource TwoDecimalCommaConverter}}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Stretch" 
                    Grid.Row="0" 
                    Grid.Column="2" 
                    Margin="10,0,20,8">
            <TextBlock Text="Habilitado" 
                       VerticalAlignment="Center"                       
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbIsEnabled"
                      Style="{StaticResource CheckBox}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"                        
                      IsChecked="{Binding IsEnabled}"/>
        </StackPanel>


        <Button x:Name="btnCancel"
                Grid.Row="1" 
                Grid.ColumnSpan="3"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Cancelar"  
                Margin="0,40,120,0" 
                Click="BtnCancel_Click" 
                Style="{StaticResource BtnCancel}"/>
        
        <Button x:Name="btnUpdate"
                Grid.Row="1" 
                Grid.ColumnSpan="3"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Actualizar" 
                Margin="120,40,0,0"  
                Click="BtnUpdate_Click"
                Style="{StaticResource BtnUpdate}"/>
        
        <Button x:Name="btnAdd"
                Grid.Row="1" 
                Grid.ColumnSpan="3"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Guardar" 
                Margin="120,40,0,0"  
                Click="BtnAdd_Click"
                Style="{StaticResource BtnAdd}"/>

        <TextBlock x:Name="lblError"
                   Grid.Row="2" 
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Stretch"
                   Style="{StaticResource lblError12}"
                   TextWrapping="Wrap"/>
    </Grid>
</UserControl>
