<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Maestros.Stock.ListPriceListControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Maestros.Stock"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Gray">
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <!-- Fila 0: Texto y botones -->
            <RowDefinition Height="auto"/>
            <!-- Fila 1: barra de búsqueda -->
            <RowDefinition Height="auto"/>
            <!-- Fila 2: DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Fila 3: Add/Edit -->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="PanelHeader" Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="0" Margin="0,0,50,8">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Fila 0: Texto y botones -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 1: barra de búsqueda -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 2: DataGrid -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 3: Add/Edit -->
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblHeader" 
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       Content="Listas de Precios" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource lblHeader}"
                       Foreground="#324F52"/>

                <Button x:Name="btnAdd"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Content="Nueva lista"
                        Margin="0,5,0,0"
                        Style="{StaticResource BtnArticles}" 
                        Click="btnAdd_Click" 
                        Height="20" 
                        Grid.RowSpan="3" 
                        VerticalAlignment="Top"/>
                

                <Button x:Name="btnEnables"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Content="{Binding ToggleEnabledText}"
                        Command="{Binding ToggleEnabledCommand}"
                        Margin="40,5,0,0" 
                        Style="{StaticResource BtnEnables}" />
            </Grid>
        </StackPanel>

        <StackPanel x:Name="PanelSearch" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,50,8">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource TextBoxSearch}"
                     Width="250"
                     VerticalAlignment="Center"                     
                     ToolTip="Ingresa descripción"
                     Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <DataGrid x:Name="DgPriceLists"
                  Background="Gray"
                  Grid.Row="2" 
                  ItemsSource="{Binding PriceLists}" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  ColumnHeaderStyle="{StaticResource CenterBoldHeaderStyle}"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" 
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Descripción" Width="400">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Description}" 
                                           Style="{StaticResource LeftAlignedTextStyle}">
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>               

                <DataGridTemplateColumn Header="Utilidad" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border 
                                Background="{Binding Utility, Converter={StaticResource NegativoAFondoConverter}}">
                                <TextBlock 
                                    Text="{Binding Utility, StringFormat={}{0:N2}%}" 
                                    Style="{StaticResource CenteredTextStyle}"
                                    Foreground="{Binding Utility, Converter={StaticResource NegativoATextoConverter}}">
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>
        </DataGrid>
        <!-- Contenedor para el control de edición -->
        <ContentControl x:Name="PanelEdicion" Grid.Row="1" Style="{StaticResource Test }"/>


    </Grid>
</UserControl>
