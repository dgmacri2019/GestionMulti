<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.GeneralParameters.GeneralParameters.EditGeneralParameterControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.GeneralParameters.GeneralParameters"
             x:Name="miUserControl"
             mc:Ignorable="d" 
             Background="Gray">

    <Grid x:Name="GridGeneral" 
          HorizontalAlignment="Center"
          VerticalAlignment="Stretch" 
          Margin="10" 
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Cabecera columnas -->
            <RowDefinition Height="*"/>
            <!-- Contenido impresoras -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Background="#C8C81E" Height="70" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Configuración de Parametros Generales"
                   Foreground="White"
                   FontFamily="Tahoma"
                   FontSize="18"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Cabecera columnas -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>


            <StackPanel Orientation="Vertical"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0">
                <TextBlock Text="Días de validez del presupuesto"                           
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"
                           Style="{StaticResource BlueBold12}"/>
                <TextBox Text="{Binding BudgetValidDays}"                         
                         Margin="0,8,0,0"
                         Width="30"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" 
                        Grid.Row="1" 
                        Grid.Column="0"
                        Margin="10">
                <TextBlock Text="Utilizar lector de código de barras" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"
                           Style="{StaticResource BlueBold12}"/>
                <CheckBox IsChecked="{Binding UsePostMethod}" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>



            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Stretch" 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        Margin="0,0,0,0">
                <TextBlock Text="Configuración de código de barras" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Style="{StaticResource BlueBold12}"/>
                <RadioButton x:Name="rbProductBarCodePrice" 
                             Content="Código de Barras en Productos Pesables con Precio" 
                             Tag="1" 
                             IsChecked="{Binding ProductBarCodePrice}"/>
                <RadioButton x:Name="rbProductBarCodeWeight"
                             Content="Código de Barras en Productos Pesables con Peso" 
                             Tag="2" 
                             IsChecked="{Binding ProductBarCodeWeight}"/>
            </StackPanel>



            <StackPanel Orientation="Vertical" 
                        Grid.Row="0" 
                        Grid.Column="2"
                        Margin="10">
                <TextBlock Text="Identificador pesables"   
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"
                           Style="{StaticResource BlueBold12}"/>
                <TextBox Text="{Binding WeightIdentificator}"
                         Margin="0,8,0,0"
                         Width="30"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
            </StackPanel>


            <StackPanel Orientation="Vertical" 
                        Grid.Row="1" 
                        Grid.Column="1"
                        Margin="10">
                <TextBlock Text="Sumar cantidad del mismo artículo con lector de códigos de barra" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"
                           TextWrapping="Wrap"
                           Style="{StaticResource BlueBold12}"/>
                <CheckBox IsChecked="{Binding SumQuantityItems}" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>



        </Grid>


        <!-- Botones -->
        <Button x:Name="btnCancel"
                Content="Cerrar"
                Grid.Row="2"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.ColumnSpan="5"
                Margin="0,40,120,0" 
                Click="BtnCancel_Click" 
                Style="{StaticResource BtnCancel}"/>

        <Button x:Name="btnUpdate" 
                Content="Guardar" 
                Grid.Row="2"
                Grid.Column="0" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.ColumnSpan="5"
                Margin="120,40,0,0" 
                Click="BtnUpdate_Click" 
                Style="{StaticResource BtnUpdate}"/>

        <!-- Footer -->
        <TextBlock x:Name="lblError"
               Grid.Row="3" 
               Grid.ColumnSpan="5"
               HorizontalAlignment="Stretch"
               Style="{StaticResource lblError12}"
               TextWrapping="Wrap"/>

        <TextBlock x:Name="lblConfirm" 
               Grid.Row="3" 
               Grid.ColumnSpan="5"
               HorizontalAlignment="Stretch"
               Style="{StaticResource lblConfirm12}"/>
    </Grid>
</UserControl>
