<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.PcParameters.PurchaseAndSales.EditPcParameterControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.PcParameters.PurchaseAndSales"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             x:Name="miUserControl"
             Loaded="miUserControl_Loaded"
             Background="LightGray">
    <Grid x:Name="GridGeneral"
      HorizontalAlignment="Left"   
      VerticalAlignment="Top"
      Margin="10"
      Background="LightGray">

        <!-- Fijamos todas las filas en Auto para que crezcan según contenido
         (si usás "*", el Grid intenta encajar todo y no aparece el scroll) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Margin="10,0,20,8">
            <TextBlock Text="Nombre Pc" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPcName"
                     Style="{StaticResource TextBoxSearch}"
                     Width="auto"
                     MinWidth="150"
                     VerticalAlignment="Center"
                     IsReadOnly="True"
                     Text="{Binding PCName}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    Margin="10,0,20,8">
            <TextBlock Text="Punto de Venta" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtSalePoint"
                     Style="{StaticResource TextBoxSearch}"
                     Width="150"
                     VerticalAlignment="Center" 
                     MaxLength="5"
                     Text="{Binding SalePoint, StringFormat={}{0:00000}}"/>
        </StackPanel>

        <Button x:Name="btnCancel"
                Grid.Row="1" 
                Grid.Column="1" 
                Content="Cancelar"
                Margin="0,40,150,0" 
                Click="BtnCancel_Click"
                Style="{StaticResource BtnCancel}"/>

        <Button x:Name="btnUpdate"
                Grid.Row="1"
                Grid.Column="1" 
                Content="Actualizar" 
                Margin="150,40,0,0"  
                Click="BtnUpdate_Click"
                Style="{StaticResource BtnUpdate}"/>

        <TextBlock x:Name="lblError"
                   Grid.Row="2" 
                   Grid.ColumnSpan="3"
                   Style="{StaticResource lblError}"
                   TextWrapping="Wrap"/>

    </Grid>
</UserControl>
