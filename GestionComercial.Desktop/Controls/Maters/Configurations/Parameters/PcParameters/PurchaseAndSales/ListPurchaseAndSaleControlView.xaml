<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.PcParameters.PurchaseAndSales.ListPurchaseAndSaleControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.PcParameters.PurchaseAndSales"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Gray">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <!-- Fila 0: Data Grid -->
            <RowDefinition Height="*"/>
            <!-- Fila 1: Panel Content -->
            <RowDefinition Height="auto"/>
            <!-- Fila 2: Botones -->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="SpParameter" Grid.Row="2">
            <DataGrid x:Name="DgParameter" 
                   Background="Gray"
                   ItemsSource="{Binding PurchaseAndSaleViewModel}"
                   AutoGenerateColumns="False"  
                   CanUserAddRows="False"
                   CanUserSortColumns="True"
                   ColumnHeaderStyle="{StaticResource CenterBoldHeaderStyle}"
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch" 
                   MouseDoubleClick="DgParameter_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre PC"
                                        Width="auto"
                                        MinWidth="120"
                                        Binding="{Binding PcName}"
                                        IsReadOnly="True">
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding SalePoint}"
                                        Width="80"
                                        IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Punto de venta"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

            <Button 
                x:Name="BtnCancel"
                Grid.Row="3"
                HorizontalAlignment="Center"
                Content="Cancelar"
                Margin="0,5,0,0" 
                Style="{StaticResource BtnCancel}" 
                Click="BtnCancel_Click"/>
        </StackPanel>


        <!-- Contenedor para el control de edición -->
        <ContentControl x:Name="PanelEdicion" Grid.Row="1"/>
    </Grid>
</UserControl>
