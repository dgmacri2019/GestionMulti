<UserControl x:Class="GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.PcParameters.PcPrinters.EditPcPrinterControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Maters.Configurations.Parameters.PcParameters.PcPrinters"
             x:Name="miUserControl"
             mc:Ignorable="d"              
             Background="Gray">


    <Grid x:Name="GridGeneral" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10" 
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Cabecera columnas -->
            <RowDefinition Height="*"/>
            <!-- Contenido impresoras -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Background="#C8C81E" Height="70" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Configuración de Impresoras"
                       Foreground="White"
                       FontFamily="Tahoma"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

            <TextBlock Text="{Binding ComputerName, StringFormat=Nombre Pc: {0}}"
                       VerticalAlignment="Center"  
                       Margin="140,40,0,0"
                       Style="{StaticResource BlackBold14}"/>

            <TextBlock Text="{Binding SalePoint, StringFormat=Punto de venta: {0:00000}}" 
                       VerticalAlignment="Center"
                       Style="{StaticResource BlackBold14}"
                       Margin="40,40,0,0"/>

        </StackPanel>

        <!-- Cabecera columnas -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>


            <TextBlock Text="Impresoras" 
                       Grid.Column="0" 
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="¿Es Térmica?"
                       Grid.Row="0"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Ancho (mm)" 
                       Grid.Row="0" 
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Habilitar" 
                       Grid.Row="0" 
                       Grid.Column="3"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Impresoras instaladas" 
                       Grid.Row="0"
                       Grid.Column="4"
                       VerticalAlignment="Center"/>
            <CheckBox Content="Única Impresora" 
                      Grid.Row="0"
                      Grid.Column="5"
                      IsChecked="{Binding UseAllPrinters, Mode=TwoWay}"
                      VerticalAlignment="Center" 
                      Margin="10,0,0,0"/>


            <!-- Contenido impresoras -->

            <!-- Factura -->
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Impresora de Facturas" 
                           Grid.Row="1"
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding InvoicePrinter, Mode=TwoWay}"
                         Margin="0,2,0,0"
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousInvoicePrinter}" 
                      Grid.Row="1"
                      Grid.Column="1" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <TextBox Text="{Binding MaxWidthInvoicePrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Column="2"
                     Grid.Row="1"
                     IsEnabled="{Binding EnablePrintInvoice}" 
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintInvoice}"
                      Grid.Row="1"
                      Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersInvoice}"
                      SelectedItem="{Binding InvoicePrinter, Mode=TwoWay}"
                      Grid.Column="4"
                      Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>


            <!-- Nota Pedido / Sale -->
            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Impresora de Notas de Pedido" 
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding SalePrinter, Mode=TwoWay}"
                         Margin="0,2,0,0"
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousSalePrinterEffective, Mode=OneWay}"
                      Grid.Column="1" 
                      Grid.Row="2"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <TextBox Text="{Binding MaxWidthSalePrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Column="2" 
                     Grid.Row="2" 
                     IsEnabled="{Binding EnablePrintSale}" 
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintSale}" 
                      Grid.Column="3"                      
                      Grid.Row="2" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersSale}"
                      SelectedItem="{Binding SalePrinter, Mode=TwoWay}"  
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Grid.Column="4"                       
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>


            <!-- Presupuesto -->
            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Impresora de Presupuestos"
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding BudgetPrinter, Mode=TwoWay}"
                         Margin="0,2,0,0"
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousBudgetPrinterEffective, Mode=OneWay}"
                      Grid.Row="3"
                      Grid.Column="1"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <TextBox Text="{Binding MaxWidthBudgetPrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                     
                     Grid.Row="3"
                     Grid.Column="2" 
                     IsEnabled="{Binding EnablePrintBudget}"
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintBudget}" 
                      Grid.Row="3"
                      Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersBudget}"
                      SelectedItem="{Binding BudgetPrinter, Mode=TwoWay}"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Grid.Row="3"
                      Grid.Column="4"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>

            <!-- Códigos de Barra -->
            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Impresora de Códigos de Barra" 
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding BarCodePrinter, Mode=TwoWay}"
                         Margin="0,2,0,0"
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousBarCodePrinterEffective, Mode=OneWay}"
                      Grid.Row="4"
                      Grid.Column="1"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <TextBox Text="{Binding MaxWidthBarCodePrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="4"
                     Grid.Column="2"
                     IsEnabled="{Binding EnablePrintBarCode}" 
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintBarCode}" 
                      Grid.Row="4"
                      Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersBarCode}"
                      SelectedItem="{Binding BarCodePrinter, Mode=TwoWay}"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Grid.Row="4"                      
                      Grid.Column="4"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>


            <!-- Ticket Cambio -->
            <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Impresora de Ticket Cambio" 
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding TicketChangePrinter, Mode=TwoWay}"
                         Margin="0,2,0,0"
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousTicketChangePrinterEffective, Mode=OneWay}"
                      Grid.Row="5"
                      Grid.Column="1"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <TextBox Text="{Binding MaxWidthTicketChangePrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Grid.Row="5"
                     Grid.Column="2"
                     IsEnabled="{Binding EnablePrintTicketChange}" 
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintTicketChange}" 
                       Grid.Row="5"
                      Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersTicketChange}"
                      SelectedItem="{Binding TicketChangePrinter, Mode=TwoWay}"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Grid.Row="5"
                      Grid.Column="4"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>

            <!-- Remitos -->
            <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Impresora de Remitos" 
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding RemitPrinter, Mode=TwoWay}"
                         Margin="0,2,0,0"
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousRemitPrinterEffective, Mode=OneWay}"
                      Grid.Row="6"
                      Grid.Column="1" 
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <TextBox Text="{Binding MaxWidthRemitPrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="6"
                     Grid.Column="2" 
                     IsEnabled="{Binding EnablePrintRemit}" 
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintRemit}" 
                      Grid.Row="6"
                      Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersRemit}"
                      SelectedItem="{Binding RemitPrinter, Mode=TwoWay}"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Grid.Row="6"
                      Grid.Column="4"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>


            <!-- Pedidos -->
            <StackPanel Grid.Row="7" Grid.Column="0" Orientation="Vertical" Margin="0,2,0,0">
                <TextBlock Text="Impresora de Pedidos" 
                           VerticalAlignment="Center"/>
                <!-- TextBox debajo -->
                <TextBox Text="{Binding OrderPrinter, Mode=TwoWay}"                         
                         IsReadOnly="True"/>
            </StackPanel>
            <CheckBox IsChecked="{Binding UseContinuousOrderPrinterEffective, Mode=OneWay}"
                      Grid.Row="7"
                      Grid.Column="1"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Margin="0,15,0,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            <TextBox Text="{Binding MaxWidthOrderPrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="7"
                     Grid.Column="2" 
                     IsEnabled="{Binding EnablePrintOrder}" 
                     Margin="0,15,0,0"/>
            <CheckBox IsChecked="{Binding EnablePrintOrder}"
                      Grid.Row="7"
                      Grid.Column="3"                       
                      Margin="0,15,0,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding InstalledPrintersOrder}"
                      SelectedItem="{Binding OrderPrinter, Mode=TwoWay}"
                      IsEnabled="{Binding IsEnabledOtherPrinters}"
                      Grid.Row="7"
                      Grid.Column="4"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"/>

        </Grid>


        <!-- Botones -->
        <Button x:Name="btnCancel"
                    Content="Cerrar"
                    Grid.Row="3"
                    Grid.Column="0" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="5"
                    Margin="0,40,120,0" 
                    Click="BtnCancel_Click" 
                    Style="{StaticResource BtnCancel}"/>

        <Button x:Name="btnUpdate" 
                    Content="Guardar" 
                    Grid.Row="3"
                    Grid.Column="0" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="5"
                    Margin="120,40,0,0" 
                    Click="BtnUpdate_Click" 
                    Style="{StaticResource BtnUpdate}"/>

        <!-- Footer -->
        <TextBlock x:Name="lblError"
                   Grid.Row="5" 
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Stretch"
                   Style="{StaticResource lblError12}"
                   TextWrapping="Wrap"/>

        <TextBlock x:Name="lblConfirm" 
                   Grid.Row="5" 
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Stretch"
                   Style="{StaticResource lblConfirm12}"/>
    </Grid>
</UserControl>

