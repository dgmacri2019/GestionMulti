<UserControl x:Class="GestionComercial.Desktop.Controls.Users.EditUserControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Users"
             xmlns:local1="clr-namespace:GestionComercial.Desktop.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="miUserControl" 
             Loaded="miUserControl_Loaded"
             Background="LightGray">

    <Grid x:Name="GridGeneral" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10" 
       Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
            <TextBlock Text="Nombres" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtFirstName"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     MaxLength="30"
                     Text="{Binding FirstName}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Apellidos" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtLastName"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"  
                     HorizontalAlignment="Stretch"      
                     Text="{Binding LastName}"
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Email" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtEmail"
                     Style="{StaticResource TextBoxSearch}"
                     Width="170"
                     VerticalAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Email" 
                             UpdateSourceTrigger="PropertyChanged" 
                             ValidatesOnDataErrors="True" 
                             NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <local1:EmailValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="3" Margin="10,0,20,8">
            <TextBlock Text="Teléfono" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtPhoneNumber"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding PhoneNumber}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Margin="10,0,20,8">
            <TextBlock Text="Nombre de Usuario"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="txtUserName"
                     Style="{StaticResource TextBoxSearch}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"   
                     Text="{Binding UserName}" 
                     GotFocus="TextBox_SelectAll"
                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown_SelectAll"
                     KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="1" Margin="10,0,20,8">
            <TextBlock Text="Passowrd"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <PasswordBox x:Name="txtPassword"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch" 
                         GotFocus="TextBox_SelectAll"
                         KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="2" Margin="10,0,20,8">
            <TextBlock Text="Cambiar Password" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbChangePassword"
                      Style="{StaticResource CheckBox }"
                      VerticalAlignment="Center"       
                      HorizontalAlignment="Center"
                      IsChecked="{Binding ChangePassword}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="3" Margin="10,0,20,8">
            <TextBlock Text="Rol" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource BlueBold10}"/>
            <ComboBox x:Name="cbRoles" 
                   Style="{StaticResource ComboBox}"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   ItemsSource="{Binding UserRoleDtos}"
                   DisplayMemberPath="Name"
                   SelectedValuePath="Id"
                   SelectedValue="{Binding RoleId}"
                   KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,0,20,8">
            <TextBlock Text="Habilitado" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource BlueBold10}"/>
            <CheckBox x:Name="chbEnabled"
                      Style="{StaticResource CheckBox }"
                      VerticalAlignment="Center"     
                      HorizontalAlignment="Center"
                      IsChecked="{Binding IsEnabled}"
                      KeyDown="TextBox_KeyDown_MoveNext"/>
        </StackPanel>



        <Button x:Name="btnCancel"
             Grid.Row="11" 
             Grid.ColumnSpan="3"
             Grid.Column="0" 
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Content="Cancelar"  
             Margin="0,40,120,0" 
             Click="BtnCancel_Click" 
             Style="{StaticResource BtnCancel}"/>
        <Button x:Name="btnUpdate"
             Grid.Row="11" 
             Grid.ColumnSpan="3"
             Grid.Column="0" 
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Content="Actualizar" 
             Margin="120,40,0,0"  
             Click="BtnUpdate_Click"
             Style="{StaticResource BtnUpdate}"/>
        <Button x:Name="btnAdd"
             Grid.Row="11" 
             Grid.ColumnSpan="3"
             Grid.Column="0"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Content="Guardar" 
             Margin="120,40,0,0"  
             Click="BtnAdd_Click"
             Style="{StaticResource BtnAdd}"/>

        <TextBlock x:Name="lblError"
                Grid.Row="12" 
                Grid.ColumnSpan="4"
                HorizontalAlignment="Stretch"
                Style="{StaticResource lblError12}"
                TextWrapping="Wrap"/>
    </Grid>

</UserControl>
