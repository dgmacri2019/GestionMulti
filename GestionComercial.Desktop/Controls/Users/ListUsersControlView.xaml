<UserControl x:Class="GestionComercial.Desktop.Controls.Users.ListUsersControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Users"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Gray">


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <!-- Fila 0: Texto y botones -->
            <RowDefinition Height="auto"/>
            <!-- Fila 1: barra de búsqueda -->
            <RowDefinition Height="auto"/>
            <!-- Fila 2: DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Fila 3: Add/Edit -->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="PanelHeader" Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="0" Margin="0,0,50,8">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Fila 0: Texto y botones -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 1: barra de búsqueda -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 2: DataGrid -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 3: Add/Edit -->
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblHeader" 
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       Content="Usuarios" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource lblHeader}"
                       Foreground="#BD0000"/>

                <Button x:Name="btnAdd"
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        Content="Nuevo Usuario"
                        Margin="0,5,0,0" 
                        Style="{StaticResource BtnArticles}" Click="btnAdd_Click"/>

                <Button x:Name="btnEnables"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Content="{Binding ToggleEnabledText}"
                        Command="{Binding ToggleEnabledCommand}"
                        Margin="40,5,0,0" 
                        Style="{StaticResource BtnEnables}" />
            </Grid>
        </StackPanel>

        <StackPanel x:Name="PanelSearch" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,50,8">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" Style="{StaticResource BlueBold10}"/>
            <TextBox x:Name="SearchBox"
               Style="{StaticResource TextBoxSearch}"
               Width="250"
               VerticalAlignment="Center"                     
               ToolTip="Ingresa código, descripción, categoría o código de barra"
               Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>


        <DataGrid x:Name="DgUsers"
                  Grid.Row="2" 
                  Background="Gray"
                  ItemsSource="{Binding Users}" 
                   AutoGenerateColumns="False"       
                  CanUserAddRows="False"
                  CanUserSortColumns="True"
                  ColumnHeaderStyle="{StaticResource CenterBoldHeaderStyle}"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" 
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
                  Loaded="DataGrid_Loaded">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Nombres" Width="auto" MinWidth="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding FullName}" 
                                           Style="{StaticResource LeftAlignedTextStyle}">
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Nombre de Usuario" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding UserName}" 
                                Style="{StaticResource LeftAlignedTextStyle}">
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Rol" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding RoleName}" 
                                Style="{StaticResource CenteredTextStyle}">
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Email" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Style="{StaticResource CenteredTextStyle}">
                                 <Hyperlink NavigateUri="{Binding Email}"
                                            RequestNavigate="Email_RequestNavigate">
                                     <TextBlock Text="{Binding Email}" />
                                 </Hyperlink>
                             </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Teléfono" Width="auto" MinWidth="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding PhoneNumber}" 
                                Style="{StaticResource CenteredTextStyle}">
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>
        </DataGrid>
        <!-- Contenedor para el control de edición -->
        <ContentControl x:Name="PanelEdicion" Grid.Row="1" Style="{StaticResource Test }"/>


    </Grid>
</UserControl>
