<UserControl x:Class="GestionComercial.Desktop.Controls.Sales.ListSaleControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComercial.Desktop.Controls.Sales"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Gray" 
             SizeChanged="UserControl_SizeChanged">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.RowDefinitions>
            <!-- Fila 0: Texto y botones -->
            <RowDefinition Height="auto"/>
            <!-- Fila 1: barra de búsqueda -->
            <RowDefinition Height="auto"/>
            <!-- Fila 2: DataGrid -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="PanelHeader" Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="0" Margin="0,0,50,8">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Fila 0: Texto y botones -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 1: barra de búsqueda -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 2: DataGrid -->
                    <RowDefinition Height="auto"/>
                    <!-- Fila 3: Add/Edit -->
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblHeader" 
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       Content="Ventas" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Style="{StaticResource lblHeader}"
                       Foreground="#ED7A5F"/>

                <Button x:Name="btnAdd"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Content="Nueva Venta"
                        Margin="0,5,0,0"
                        Style="{StaticResource BtnArticles}" 
                        Click="btnAdd_Click" 
                        Grid.RowSpan="3" Height="20" VerticalAlignment="Top"/>
            </Grid>
        </StackPanel>

        <DataGrid x:Name="DgSales" 
                   Background="Gray" 
                   Grid.Row="2" 
                   ItemsSource="{Binding Sales}" 
                   AutoGenerateColumns="False"
                   CanUserAddRows="False"
                   IsReadOnly="True"
                   CanUserSortColumns="True"
                   ColumnHeaderStyle="{StaticResource CenterBoldHeaderStyle}"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                   MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Número Venta" Width="auto" MinWidth="100" SortMemberPath="SaleNumberString">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding SaleNumberString}" 
                               Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Fecha" Width="auto" SortMemberPath="SaleDate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding SaleDate, StringFormat={}{0:dd/MM/yyyy}}" 
                               Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Importe Total" Width="auto" SortMemberPath="Total">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Total, StringFormat={}{0:C2}}" 
                               Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Razón&#x0a;Social" Width="auto" MinWidth="100" SortMemberPath="BusinessName">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Client.BusinessName}" 
                               Style="{StaticResource LeftAlignedTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Nombre&#x0a;Fantasía" Width="auto" MinWidth="100" SortMemberPath="FantasyName">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Client.FantasyName}" 
                               Style="{StaticResource LeftAlignedTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="DNI / CUIT" Width="auto" SortMemberPath="DocumentNumber">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Client.DocumentNumber}" 
                               Style="{StaticResource CenteredTextStyle}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Acciones" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                <Button Padding="5,0"
                                        Tag="{Binding Id}" 
                                        Click="BtnPrint_Click">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource BtnDisables}">
                                            <Setter Property="Content" Value="Imprimir Factura"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCAE}" Value="">
                                                    <Setter Property="Content" Value="Imprimir Venta"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding HasCAE}" Value="{x:Null}">
                                                    <Setter Property="Content" Value="Imprimir Venta"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="Facturar" 
                                        Padding="5,0"
                                        Tag="{Binding Id}" 
                                        Click="BtnConvertInvoice_Click">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource BtnDisables}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCAE}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Antes: -->
        <!-- <ContentControl x:Name="PanelEdicion" Grid.Row="1" Style="{StaticResource Test }"/> -->

        <!-- Reemplazar por: -->
        <!--
    <ScrollViewer Grid.Row="2"
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Auto"
          CanContentScroll="False">
        <ContentControl x:Name="PanelEdicion"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
    </ScrollViewer>-->

        <ContentControl x:Name="PanelEdicion" Grid.Row="2" Margin="0,-60,0,0" Visibility="Hidden">
            <ContentControl.Template>
                <ControlTemplate TargetType="ContentControl">
                    <Border Background="{TemplateBinding Background}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                                  CanContentScroll="False">
                            <ContentPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ContentControl.Template>
        </ContentControl>
    </Grid>
</UserControl>
